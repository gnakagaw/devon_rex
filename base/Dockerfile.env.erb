ENV GLOBAL_RUBY_VERSION <%= ENV.fetch('GLOBAL_RUBY_VERSION') %>
ENV BUNDLER1_VERSION <%= ENV.fetch('BUNDLER1_VERSION') %>
ENV BUNDLER2_VERSION <%= ENV.fetch('BUNDLER2_VERSION') %>
ENV LANG <%= ENV.fetch('LANGUAGE') %>
ENV LANGUAGE $LANG
ENV LC_ALL $LANG
ENV RUNNER_USER <%= ENV.fetch('DEVON_REX_RUNNER_USER') %>
ENV RUNNER_GROUP nogroup
ENV RUNNER_USER_HOME /home/${RUNNER_USER}
ENV GEM_HOME ${RUNNER_USER_HOME}/ruby
ENV PATH ${RUNNER_USER_HOME}/bin:${GEM_HOME}/bin:${PATH}
ENV DEBIAN_FRONTEND noninteractive
