#!/bin/bash
set -euo pipefail

is_debian() {
  [[ $(awk -F= '/^NAME/{print $2}' /etc/os-release) = "Debian GNU/Linux" ]]
}

is_ubuntu() {
  [[ $(awk -F= '/^NAME/{print $2}' /etc/os-release) = "Ubuntu" ]]
}

required_packages=(
  autoconf
  build-essential
  curl
  git
  gnupg
  imagemagick
  libbz2-dev
  libcurl4-openssl-dev
  libevent-dev
  libffi-dev
  libglib2.0-dev
  libjpeg-dev
  libmagickcore-dev
  libmagickwand-dev
  libncurses-dev
  libpq-dev
  libreadline-dev
  libsqlite3-dev
  libssl-dev
  libxml2-dev
  libxslt-dev
  libyaml-dev
  openssh-client
  patchutils
  procps
  software-properties-common
  sudo
  tzdata
  unzip
  wget
  zlib1g-dev
)

if is_debian; then
  required_packages+=(
    libmariadb-dev-compat
    locales
    python-software-properties
  )
elif is_ubuntu; then
  required_packages+=(
    libmysqlclient-dev
    language-pack-en
  )
fi

apt-get update -y
apt-get install -qq -y --no-install-recommends ${required_packages[*]}

# Configure locale
if is_debian; then
  sed -i -e "s/# ${LANGUAGE}/${LANGUAGE}/" /etc/locale.gen
  locale-gen "$LANGUAGE"
  dpkg-reconfigure --frontend noninteractive locales
elif is_ubuntu; then
  locale-gen "$LANGUAGE"
  update-locale "$LANGUAGE"
fi

# Clean up
apt-get -qyy autoremove
rm -rf /var/lib/apt/lists/*
apt-get -qyy clean

# Create a user
adduser --system --shell /bin/bash --home "$RUNNER_USER_HOME" "$RUNNER_USER"
install -o "$RUNNER_USER" -d /analyzer
